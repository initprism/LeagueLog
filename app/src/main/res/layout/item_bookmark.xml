<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/mSummonerIcon"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginTop="3dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/testicon" />


            <TextView
                android:id="@+id/mSummonerLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/mSummonerIcon"
                android:layout_alignRight="@+id/mSummonerIcon"
                android:layout_margin="0dp"
                android:autoSizeTextType="uniform"
                android:background="@drawable/level_box"
                android:gravity="center"
                android:text="134"
                android:textAlignment="center"
                android:textColor="@color/fontColor"
                android:textSize="13dp" />

            <ImageView
                android:id="@+id/mBookmark"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:adjustViewBounds="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/favorite_black"
                android:tint="@color/bgColor" />
        </RelativeLayout>


        <TextView

            android:id="@+id/mSummonerId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/bgColor"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mSummonerTierIcon"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:adjustViewBounds="true" />

            <TextView
                android:id="@+id/mSummonerTier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/bgColor"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
